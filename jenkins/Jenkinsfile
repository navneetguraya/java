pipeline {
    agent any
    tools {
        maven 'maven'
        }
    }
    stages {
        stage('Build') {
            steps {
                git branch: 'main',
                credentialsId: 'a06e7c70-ecfc-48f7-ac37-137afc0ce5c1',
                url: 'https://github.com/navneetguraya/java.git'
                }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
        stage('Deliver') {
            steps {
                sh './jenkins/scripts/deliver.sh'
            }
        }
    }
}
